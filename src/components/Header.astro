---
const locale = Astro.currentLocale;
import NavigationDefault from "./Navigation.astro";
import Navigation from "./de/Navigation.astro";
import logo from "../assets/nikmaxott-title.jpg";
---

<header
  class="flex justify-center md:justify-between p-3 bg-gray-300 dark:bg-gray-900 print:hidden fixed top-0 w-full z-10"
>
  <div class="items-center md:block hidden">
    <img src={logo.src} width="100" height="50" alt="nikmaxott logo" />
  </div>

  <nav class="flex items-center mr-4">
    {locale != "de" ? <NavigationDefault /> : <Navigation />}
  </nav>
</header>
