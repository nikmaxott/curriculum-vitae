---
import logo from "../assets/nikmaxott-title.jpg";
import ThemeIcon from "../components/ThemeIcon.astro";
import "remixicon/fonts/remixicon.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Nikolaus Zolnhofer Portfolio</title>
    <base href="/" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <!-- Favicons -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />

    <!-- General metadata -->
    <meta
      name="title"
      content="Nikolaus Zolnhofer CV - Software Developer Aberdeen - Fullstack"
    />
    <meta
      name="description"
      content="CV for Nikolaus Zolnhofer a Fullstack Developer based in Aberdeen, Scotland. Specialised in TypeScript, React, and .NET Core."
    />
    <meta
      name="keywords"
      content="software developer, aberdeen, react, hiring, asp.net, typescript, fullstack"
    />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="English" />
    <meta name="author" content="Nikolaus-Maxim Zolnhofer" />

    <!-- Open Graph -->
    <meta
      property="og:title"
      content="Nikolaus Zolnhofer CV - Software Developer Aberdeen - Fullstack"
    />
    <meta property="og:site_name" content="Nikolaus Zolnhofer Portfolio" />
    <meta property="og:url" content="https://cv.nikmaxott.org" />
    <meta
      property="og:description"
      content="CV for Nikolaus Zolnhofer a Fullstack Developer based in Aberdeen, Scotland. Specialised in JavaScript, React, and Ruby on Rails."
    />
    <meta property="og:type" content="profile" />
    <meta property="og:image" content="/android-chrome-512x512.png" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@nikmaxott" />
    <meta name="twitter:title" content="" />
    <meta
      name="twitter:description"
      content="CV for Nikolaus Zolnhofer a Fullstack Developer based in Aberdeen, Scotland. Specialised in TypeScript, React, and C# .NET"
    />
    <meta name="twitter:image" content="/android-chrome-512x512.png" />

    <meta name="theme-color" content="#ffffff" />
  </head>
  <body class="font-mono">
    <div
      class="dark:bg-gray-600 bg-white min-h-screen dark:text-white text-gray-900"
    >
      <header
        class="flex justify-center md:justify-between p-3 bg-gray-300 dark:bg-gray-900 print:hidden fixed top-0 w-full z-10"
      >
        <div class="items-center md:block hidden">
          <img src={logo.src} width="115" height="48" alt="nikmaxott logo" />
        </div>
        <nav class="flex items-center mr-4">
          <ul class="flex">
            <li class="m-2">
              <a href="https://www.nikmaxott.org/contact/" target="_blank"
                >Contact</a
              >
            </li>
            <ThemeIcon />

            <li class="m-2">
              <button onclick="print();"><i class="ri-printer-line"></i></button
              >
            </li>
          </ul>
        </nav>
      </header>
      <section class="top-16 m-4 pt-20 px-2 lg:px-4 mb-0 print:m-0 print:p-0">
        <slot />
      </section>
      <footer class="print:hidden">
        <div
          class="flex justify-between p-3 ml-4 mr-4 flex-col-reverse lg:flex-row"
        >
          <span class="pt-2 lg:pt-0">
            Made with &hearts; in Scotland. &copy; nikmaxott 2024
          </span>
          <ul class="flex items-center justify-center">
            <li class="p-1">
              <a
                href="https://www.linkedin.com/in/nikolaus-zolnhofer/"
                target="_blank"><i class="ri-linkedin-line ri-lg"></i></a
              >
            </li>
            <li class="p-1">
              <a href="https://www.nikmaxott.org/" target="_blank"
                ><i class="ri-global-line ri-lg"></i></a
              >
            </li>
          </ul>
        </div>
      </footer>
    </div>
  </body>
</html>

<style>
  /* CSS */
  @import url(https://cdn.jsdelivr.net/npm/firacode@6.2.0/distr/fira_code.css);

  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
